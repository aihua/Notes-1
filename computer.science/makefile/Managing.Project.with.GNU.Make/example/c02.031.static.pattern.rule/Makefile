# VPATH = src include
vpath %.cpp src
vpath %.h include

CC = g++
CPPFLAGS += -I include

hello : hello.o lucky.o

# hello.o lucky.o : lucky.h

# XXX: static pattern rule, obj doesn't include lucky.o
# lucky.o is generated by implicit rule
obj = hello.o
$(obj): %.o: %.cpp lucky.h
	$(CC) -c $(CPPFLAGS) $< -o $@
	@echo static pattern rule!

.PHONY : clean
clean:
	rm -rf hello *.o
