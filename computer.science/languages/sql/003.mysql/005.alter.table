ALTER TABLE tb_name ENGINE = InnoDB;

# 修改表名
ALTER TABLE tb_name RENAME TO new_tb_name;
RENAME TABLE tb_name TO new_tb_name;

ALTER TABLE db1.tb_name RENAME TO db2.tb_name;

# add column
ALTER TABLE tb_name add col_name CHAR(32);
