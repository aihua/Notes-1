<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dip"
    android:layout_height="52dip"
    android:background="@drawable/favorite_button_bg"
    android:orientation="horizontal" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="78dip"
        android:layout_height="55dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/play_now"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/play_now"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/channel_num"
            style="@style/favoritefontStyle"
            android:layout_width="78dip"
            android:layout_height="30dip"
            android:layout_marginTop="0dip"
            android:gravity="center|top"
            android:textColor="#2E2E2E"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/channel_str"
            style="@style/favoritefontStyle"
            android:layout_width="fill_parent"
            android:layout_height="18dip"
            android:gravity="center|top"
            android:text="@string/mhz"
            android:textColor="#2E2E2E"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@drawable/favorite_line" />

</LinearLayout>