<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dip" android:layout_height="48dip"
    android:orientation="horizontal" android:background="@drawable/favorite_button_bg">
         <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="78dip" android:layout_height="55dip"
        android:orientation="vertical" >

        <ImageView android:id="@+id/play_now" android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:src="@drawable/play_now"
            android:gravity="center" android:visibility="invisible" />

        <TextView android:id="@+id/channel_num" style="@style/favoritefontStyle"
            android:layout_width="78dip" android:layout_height="30dip"
            android:textSize="25sp" android:gravity="center|top"
            android:layout_marginTop="0dip" />
        <TextView android:id="@+id/channel_str" android:layout_width="fill_parent"
            android:layout_height="18dip" android:gravity="center|top"
            android:textSize="12sp" android:text="@string/mhz" style="@style/favoritefontStyle" />
    </LinearLayout>
    <View android:background="@drawable/favorite_line"
        android:layout_width="2px" android:layout_height="match_parent" />

</LinearLayout>
