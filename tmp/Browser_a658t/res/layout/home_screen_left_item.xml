<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:focusable="true"
    android:focusableInTouchMode="true"    
    android:id="@+id/screen_item">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="45dp"
	    android:orientation="horizontal" 
	    android:focusable="false"
  	    android:id="@+id/screen_item_line"
	    android:layout_gravity="center_vertical"
	    android:gravity="center">

		<LinearLayout android:id="@+id/screen_item_image"
		    android:layout_width="3dp"
		    android:layout_height="13dp"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="10dp"
		    android:background="#878787"
		    ></LinearLayout>
		
	    <TextView  android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:textSize="15sp"
		    android:textColor="@color/black"
		    android:layout_toRightOf="@id/screen_item_image"
		    android:layout_marginLeft="10dp"
		    android:gravity="center_vertical"
		    android:id="@+id/screen_item_text"
		    />
	    
		<ImageView android:layout_width="wrap_content"
		    android:layout_height="45dp"
		    android:layout_alignParentRight="true"
		    android:id="@+id/screen_item_image_list"
		    android:src="@drawable/screen_item_image_list_normal"/>
	</RelativeLayout>
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:focusable="false"
	    android:focusableInTouchMode="false"
	    android:id="@+id/screen_item_div"
	    android:visibility="gone">
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#C9C9C9"></LinearLayout>
	<com.android.browser.ScreenGridView android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_marginLeft="1dp"
		android:layout_marginRight="-0.3dp"
  		android:numColumns="5"
	    android:stretchMode="columnWidth"
 	    android:horizontalSpacing="1dp"
	    android:verticalSpacing="1dp"
	    android:clickable="true"
	    android:background="#C9C9C9"
	    android:gravity="center"
	    android:id="@+id/screen_item_grid"
	    ></com.android.browser.ScreenGridView>
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="#C9C9C9"></LinearLayout>
    </LinearLayout>
    
</LinearLayout>