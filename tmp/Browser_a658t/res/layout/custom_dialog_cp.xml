<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false"
    >
     <View 
        android:layout_width="match_parent"
    	android:layout_height="1dip"
    	android:background="#FFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    >
    <TextView  
	    android:id="@+id/add_new_file"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/new_file"
 	    android:paddingLeft="2dip"></TextView>
    <EditText 
	    android:id="@+id/new_filename"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_marginLeft="15dip"
	    android:inputType="textCapSentences|textNoSuggestions"
	    android:ellipsize="end"
 	    ></EditText> 
    
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    >
    <TextView  
	    android:id="@+id/save_new_file"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/new_save_path"
 	    android:paddingLeft="2dip"
 	    ></TextView>
    
    <ImageButton 
        android:id="@+id/choose_path"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:src="@drawable/ic_folder_holo_dark"
	    android:layout_alignParentRight="true"/>

    <EditText
        android:id="@+id/save_file_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_toLeftOf="@+id/choose_path"
        android:layout_toRightOf="@+id/save_new_file"
        android:ellipsize="end"
        android:singleLine="true"
         android:editable="false">

        <requestFocus />
    </EditText>

 </RelativeLayout>
 <LinearLayout 
     	android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:padding="10dip"
	    >
     <Button 
        android:id="@+id/ok"
        android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_weight="1"
	    android:text="@string/ok"
	    />
     <Button 
        android:id="@+id/cancel"
        android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_weight="1"
	    android:text="@string/cancel"
        />
 </LinearLayout>
</LinearLayout>
