<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingLeft="30px"
	android:paddingRight="30px">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/wifi_disconnected"
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<CheckBox android:id="@+id/wifi_close_dialog_check"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="60dp" android:text="@string/wifi_close_save_operation" />

	</LinearLayout>
</LinearLayout>
